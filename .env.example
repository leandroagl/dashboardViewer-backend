# ─── Servidor ────────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:4200

# ─── Base de datos ───────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ondra_monitor
DB_USER=ondra
DB_PASSWORD=secret

# ─── JWT ─────────────────────────────────────────────────────────────────────
JWT_ACCESS_SECRET=change_me_access_secret_min_32chars
JWT_REFRESH_SECRET=change_me_refresh_secret_min_32chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ─── PRTG ────────────────────────────────────────────────────────────────────
PRTG_BASE_URL=https://prtg.ondra.local
PRTG_API_TOKEN=
# false (default): aceptar certificados auto-firmados (on-premise)
# true: requerir certificado TLS válido (recomendado en producción)
PRTG_REJECT_UNAUTHORIZED=false
# Subgrupos a consultar en PRTG, separados por coma
PRTG_SUBGROUPS=Windows Server,Networking,Servers,Backups,Switches,Antenas PTP

# ─── Cookies ─────────────────────────────────────────────────────────────────
COOKIE_DOMAIN=monitor.ondra.com.ar
COOKIE_SECURE=true
